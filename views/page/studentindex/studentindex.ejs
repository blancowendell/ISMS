<div class="container-fluid">
    <br>
    <!-- Content Row -->
    <br>

    <div class="row">
        <!-- Left Side: Welcome and Status -->
        <div class="col-lg-6 d-flex flex-column">
            <!-- Welcome Message and Date -->
            <div class="custom-box flex-grow-1 text-center mb-4">
                <h1 class="h1 mb-0 text-black-800 custom-font">
                    Welcome <%= fullname %><br>
                    <span class="h3 mb-0 text-danger" id="dynamic-time"></span>
                </h1>
            </div>
        
            <!-- Status Message -->
            <div class="custom-box flex-grow-1 text-center">
                <h1 class="h1 mb-0 text-black-800 custom-font">
                    Status: <span class="<%= status === 'UnVerified' ? 'text-danger' : 'text-success' %>"><%= status %></span><br>
                    <!-- Exclamation Icon as Button -->
                    <% if (status === 'UnVerified') { %>
                    <button 
                        id="status-icon" 
                        class="btn btn-link" 
                        data-toggle="modal" 
                        data-target="#statusModal">
                        <i class="fas fa-exclamation-circle"></i>
                    </button>
                    <% } %>
                </h1>
            </div>
        </div>
        
        
    
        <!-- Right Side: Calendar -->
        <div class="col-lg-6">
            <div class="card shadow mb-4 h-100">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Calendar</h6>
                    <div class="dropdown no-arrow">
                        <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                           data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                             aria-labelledby="dropdownMenuLink">
                            <div class="dropdown-header">Dropdown Header:</div>
                            <a class="dropdown-item" href="#">Action</a>
                            <a class="dropdown-item" href="#">Another action</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Something else here</a>
                        </div>
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <iframe 
                        src="https://calendar.google.com/calendar/embed?src=ilsp.test.dev%40gmail.com&ctz=Asia%2FManila&showTitle=0" 
                        style="border: 0; width: 100%; height: 400px; pointer-events: none;" 
                        frameborder="0" 
                        scrolling="no">
                    </iframe>
                </div>
            </div>
        </div>
    </div>

    <br>

    <div class="row">
        <div class="col-xl-12">
          <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
              <h6 class="m-0 font-weight-bold text-primary">Announcements</h6>
              <div class="dropdown no-arrow">
                <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in"
                     aria-labelledby="dropdownMenuLink">
                  <div class="dropdown-header">Dropdown Header:</div>
                  <a class="dropdown-item" href="#">Action</a>
                  <a class="dropdown-item" href="#">Another action</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="#">Something else here</a>
                </div>
              </div>
            </div>
            <div class="card-body">
              <div id="carouselannouncement" class="carousel slide carousel-fade" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <!-- Carousel items will be injected here by JavaScript -->
                </div>
                <!-- Carousel controls -->
                <a class="carousel-control-prev" href="#carouselannouncement" role="button" data-bs-slide="prev">
                  <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselannouncement" role="button" data-bs-slide="next">
                  <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      
      
    
    
</div>


<!-- Modal -->
<div class="modal fade" id="statusModal" tabindex="-1" role="dialog" aria-labelledby="statusModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="statusModalLabel">Application Status</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Your Status is <%= status %> click the Proceed Button to finish your application.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="proceedButton">Proceed</button>
            </div>
        </div>
    </div>
</div>