        $(document).on("click", "#applicationRejectBtn", function () {
            let id = studentid;

            if (studentid === "") {
                swal("Validation Error", "Student Id is required.", "error");
            } else {
                swal({
                    title: "Are you sure?",
                    text: "Do you want to reject this application?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                }).then((willReject) => {
                    if (willReject) {
                        $('#viewapplicationmodal').modal('hide');
                        $('#rejectionModal').modal('show');
                        $('#sendRejectionBtn').off('click').on('click', function () {
                            let rejectionMessage = $('#rejectionMessage').val().trim();
                            let selectedRequirements = [];

                            $('#requirementCheckboxes input:checked').each(function () {
                                selectedRequirements.push($(this).val());
                            });

                            if (rejectionMessage) {
                                $.ajax({
                                    type: "POST",
                                    url: "/pendingapplication/reject",
                                    data: {
                                        studentid: id,
                                        message: rejectionMessage,
                                        requirements: selectedRequirements
                                    },
                                    success: function (result) {
                                        if (result.msg === "success") {
                                            swal({
                                                title: "Rejected Successfully",
                                                text: "The application has been rejected.",
                                                icon: "success",
                                                button: "OK!",
                                            }).then(() => {
                                                window.location.reload();
                                            });
                                        } else {
                                            swal("Error", "An error occurred while rejecting the application.", "error");
                                        }
                                    },
                                    error: function () {
                                        swal("Error", "An error occurred while sending the rejection.", "error");
                                    }
                                });
                                $('#rejectionModal').modal('hide');
                            } else {
                                swal("Cancelled", "Rejection message was not provided.", "error");
                            }
                        });
                    }
                });
            }
        });


