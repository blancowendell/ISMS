                    if (willApprove) {
                        swal({
                            title: "Processing",
                            text: "Please wait while we process your request.",
                            icon: "info",
                            buttons: false,
                            closeOnClickOutside: false,
                            closeOnEsc: false,
                            timer: 15000 // Optional: Duration of the loading state
                        });

                        $.ajax({
                            type: "POST",
                            url: "/pendingapplication/approved",
                            data: {
                                studentid: id,
                            },
                            success: function (result) {
                                swal.close();

                                if (result.msg === "success") {
                                    swal({
                                        title: "Update Successfully",
                                        text: "The application has been approved!",
                                        icon: "success",
                                        button: "OK!",
                                    }).then(() => {
                                        window.location.reload();
                                    });
                                    LoadTable();
                                } else if (result.msg === "validation_error") {
                                    // Display validation error message
                                    swal({
                                        title: "Validation Error",
                                        text: result.error, // The specific validation error returned from the server
                                        icon: "warning",
                                        button: "OK!",
                                    });
                                } else if (result.msg === "exist") {
                                    swal({
                                        title: "Exist",
                                        text: "Data already exists!",
                                        icon: "warning",
                                        button: "OK!",
                                    });
                                } else {
                                    swal(
                                        "Unexpected Error",
                                        "An unexpected error occurred!",
                                        "warning"
                                    );
                                }
                            },
                            error: function (err) {
                                swal.close();
                                swal("Error", "An error occurred while saving data.", "error");
                            },
                        });
                    } else {
                        swal("Cancelled", "The approval was cancelled.", "info");
                    }
                });
            }
        });


