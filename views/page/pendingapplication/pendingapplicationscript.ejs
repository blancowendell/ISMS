        $(document).on("click", "#applicationSaveBtn", function () {
            let id = studentid;
            var message = "";

            if (studentid === "") {
                message += "Student Id is required. ";
            }

            if (message !== "") {
                swal("Validation Error", message, "error");
            } else {
                swal({
                    title: "Are you sure?",
                    text: "Do you want to approve this application?",
                    icon: "warning",
